%div.small-12.columns
  %h2 Welcome, create your account to get started

%div
  = form_for @user, url: sign_up_path(@user) do |f|
    %div.small-12.medium-6.columns
      = label :first_name, 'First Name'
      = f.text_field :first_name
    %div.small-12.medium-6.columns
      = label :last_name, 'Last Name'
      = f.text_field :last_name

    %div.small-12.columns
      = label :email, 'Your email'
      = f.text_field :email

    %div.small-12.columns
      = label :username, 'Your username'
      = f.text_field :username

    %div.small-12.medium-6.columns
      = label :password, 'Your Password'
      = f.text_field :password
    %div.small-12.medium-6.columns
      = label :password, 'Your Password Confirmation'
      = f.text_field :password_confirmation

    %div.small-12.columns
      = f.submit 'Sign up'
