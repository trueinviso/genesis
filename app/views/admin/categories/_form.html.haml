= form_for [:admin, @category] do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this media item from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  %div.field
    = f.label :name
    = f.text_field :name
  %div.actions
    = f.submit 'Save'
