.screens-wrapper.row

  //------ Categories ------//
  .small-3.columns.screens-categories-list
    = render partial: "shared/categories",
      locals: { categories: Category.includes(:screens).all }

  .small-9.columns.screens-right-panel

    - if @tags.present?
      //------ Tags ------//
      .screens-tag-list
        = render partial: "shared/tags", locals: { tags: @tags }

    //------ Cards -------//
    .screens-card-list
      %ul.small-block-grid-5
        - @screens.each do |screen|
          %li
            - cache screen do
              = render partial: "shared/card", locals: { screen: screen }

= render "shared/screen_modal"
