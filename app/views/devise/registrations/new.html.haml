.align-center.align-vertical.row.forms
  .column.small-12.medium-10.wrapper
    .row.align-center.align-vertical#signup
      .small-12.columns.external-header
        Welcome, create your account to get started

      = form_for(resource,
        as: resource_name,
        url: registration_path(resource_name)) do |f|
        .small-12.medium-6.columns
          = label :first_name, "First Name"
          = f.text_field :first_name
          .error-message#user_first_name-error
        .small-12.medium-6.columns
          = label :last_name, "Last Name"
          = f.text_field :last_name
          .error-message#user_last_name-error

        .small-12.columns
          = label :email, "Your email"
          = f.text_field :email
          .error-message#user_email-error

        .small-12.columns
          = label :username, "Your username"
          = f.text_field :username
          .error-message#user_username-error

        .small-12.columns
          = label :password, "Your Password"
          = f.text_field :password
          .error-message#user_password-error

        .small-12.columns
          = f.submit "Continue",
            data: { disable_with: "Please wait..." },
            id: "new-user-submit"

      .small-12.column.instructions
        By clicking "Continue" I agree to our
        = link_to "Terms of Service", "#"
