%div.align-center.align-vertical.row.forms
  %div.column.small-12.medium-10.wrapper
    %div#signup.row.align-center.align-vertical
      %div.small-12.columns.external-header
        Welcome, create your account to get started

      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        %div.small-12.medium-6.columns
          = label :first_name, 'First Name'
          = f.text_field :first_name
          %div.error-message#user_first_name-error
        %div.small-12.medium-6.columns
          = label :last_name, 'Last Name'
          = f.text_field :last_name
          %div.error-message#user_last_name-error

        %div.small-12.columns
          = label :email, 'Your email'
          = f.text_field :email
          %div.error-message#user_email-error

        %div.small-12.columns
          = label :username, 'Your username'
          = f.text_field :username
          %div.error-message#user_username-error

        %div.small-12.columns
          = label :password, 'Your Password'
          = f.text_field :password
          %div.error-message#user_password-error

        %div.small-12.columns
          = f.submit 'Continue', data: { disable_with: "Please wait..." }, id: 'new-user-submit'

      %div.small-12.column.instructions
        By clicking "Continue" I agree to our
        = link_to 'Terms of Service', '#'
