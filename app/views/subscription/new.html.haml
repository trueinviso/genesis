.align-center.align-vertical.row.forms
  .column.small-12.medium-10.wrapper
    .row.align-center.align-vertical#new-subscription
      .column.small-12
        .small-12.columns
          %h2.small-12.columns.external-header
            Payment information

        %div
          = form_for @subscription, url: subscription_path do |f|
            /= hidden_field_tag "payment_token", nil, { id: "payment_token" }
            .small-12.columns
              .small-12.columns
                %label Billing cycle
              .small-12.columns
                .monthly-radio.small-6.column.radio.active
                  = radio_button_tag :plan, "monthly", checked: true
                  = label_tag(:plan_monthly, "Monthly - $15 every month")
                .yearly-radio.small-6.column.radio
                  = radio_button_tag :plan, "yearly"
                  = label_tag(:plan_yearly, "Yearly - $120 once a year")

            = render "shared/card_details"

            .small-12.columns
              .small-12.columns
                = f.submit "Get started",
                  id: "stripe-submit",
                  data: { disable_with: "Please wait..." }

              .small-12.columns.instructions
                Your card will be charged upon submitting this form and begin your subscription.
